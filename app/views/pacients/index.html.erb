<p id="notice"><%= notice %></p>

<h1>Pacients</h1>
<p><%= current_user.email  %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Last name</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pacients.each do |pacient| %>
      <tr>
        <td><%= pacient.name %></td>
        <td><%= pacient.last_name %></td>
        <td><%= pacient.age %></td>
        <td><%= link_to 'Show', pacient %></td>
        <td><%= link_to 'Edit', edit_pacient_path(pacient) %></td>
        <td><%= link_to 'Destroy', pacient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pacient', new_pacient_path %>
